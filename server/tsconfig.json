{
    "compilerOptions": {
        "target": "es2016",
        "module": "Node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node16",
        "outDir": "build",
        "typeRoots": ["node_modules/@types"],

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["./node_modules"],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
